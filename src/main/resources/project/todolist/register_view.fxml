<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="175.0" prefWidth="240.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.todolist.controller.RegisterController">
    <Label text="Register" />
    <TextField fx:id="usernameField" promptText="Username">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="passwordField" promptText="Password">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></PasswordField>
    <Label fx:id="messageLabel" textFill="green" />
    <HBox spacing="10">
        <Button onAction="#handleRegister" text="Register" />
        <Button onAction="#switchToLogin" text="Back to Login" />
      <VBox.margin>
         <Insets bottom="5.0" left="45.0" />
      </VBox.margin>
    </HBox>
</VBox>
