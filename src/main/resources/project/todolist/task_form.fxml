<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="project.todolist.controller.TaskFormController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Form Tugas" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Catatan / Deskripsi -->
    <HBox spacing="10">
        <Label text="Catatan:" minWidth="100"/>
        <TextArea fx:id="catatanArea" prefRowCount="3" prefColumnCount="20" promptText="Deskripsi tugas"/>
    </HBox>

    <!-- Tanggal -->
    <HBox spacing="10">
        <Label text="Tanggal:" minWidth="100"/>
        <DatePicker fx:id="datePicker"/>
    </HBox>

    <!-- Waktu -->
    <HBox spacing="10">
        <Label text="Waktu:" minWidth="100"/>
        <Spinner fx:id="hourSpinner" prefWidth="70" editable="true"/>
        <Label text=":"/>
        <Spinner fx:id="minuteSpinner" prefWidth="70" editable="true"/>
    </HBox>

    <!-- Kategori -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Kategori:" minWidth="100"/>
        <ComboBox fx:id="kategoriCombo" promptText="Pilih kategori" prefWidth="150"/>
        <TextField fx:id="kategoriBaruField" promptText="Kategori baru" prefWidth="120"/>
        <Button text="Tambah Kategori" onAction="#handleAddCategory"/>
    </HBox>

    <!-- Simpan -->
    <Button text="Simpan" onAction="#handleSaveTask" maxWidth="Infinity" style="-fx-font-size: 14px;"/>

</VBox>
