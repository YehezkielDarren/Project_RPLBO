<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="175.0" prefWidth="240.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.todolist.controller.LoginController">
    <Label text="Login">
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Label>
    <TextField fx:id="usernameField" promptText="Username">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></TextField>
    <PasswordField fx:id="passwordField" promptText="Password">
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin></PasswordField>
    <Label fx:id="messageLabel" textFill="red" />
    <HBox spacing="10">
        <Button onAction="#handleLogin" text="Login" />
        <Button onAction="#switchToRegister" text="Register" />
      <VBox.margin>
         <Insets bottom="20.0" left="58.0" />
      </VBox.margin>
    </HBox>
</VBox>
