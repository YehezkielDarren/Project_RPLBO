<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.todolist.controller.ToDoListController">
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="160" spacing="15" style="-fx-background-color: #2196F3;" styleClass="left-pane">
            <padding><Insets bottom="20" left="10" right="10" top="20" /></padding>
            <Button maxWidth="120" onAction="#addTodo" styleClass="button" text="➕ Add" />
            <Button maxWidth="120" onAction="#editTodo" styleClass="button-alt" text="✏️ Edit" />
            <Button maxWidth="120" onAction="#deleteTodo" styleClass="button" text="🗑️ Delete" />
        </VBox>
    </left>
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label styleClass="app-title" text="ToDoList">
                <HBox.margin>
                    <Insets right="348.0" />
                </HBox.margin>
            </Label>
            <Label text="Filter by Category:" />
            <ComboBox fx:id="filterCombo" onAction="#filterTodos" promptText="Select Category" styleClass="combo-box" />
            <Button fx:id="logoutButton" onAction="#logout" styleClass="button-alt" text="⎋ Logout" />
        </HBox>
    </top>
    <center>
        <TableView fx:id="todoTable" prefHeight="400.0" prefWidth="700.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="tanggalCol" prefWidth="100.0" styleClass="table-column" text="Tanggal" />
                <TableColumn fx:id="waktuCol" prefWidth="90.0" styleClass="table-column" text="Waktu" />
                <TableColumn fx:id="catatanCol" prefWidth="250.0" styleClass="table-column" text="Catatan" />
                <TableColumn fx:id="statusCol" prefWidth="142.0" styleClass="table-column" text="Status" />
                <TableColumn fx:id="kategoriCol" prefWidth="159.0" styleClass="table-column" text="Kategori" />
            </columns>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </TableView>
    </center>
</BorderPane>
